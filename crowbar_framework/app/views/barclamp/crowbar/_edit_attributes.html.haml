= attributes_for @proposal do
  .panel-sub
    = header show_raw_deployment?, true

  .panel-body
    = boolean_field :simple_proposal_ui

    %fieldset
      %legend
        = t(".ssl_header")

      = boolean_field %w(apache ssl),
        :collection => :ssl_protocols_for_crowbar,
        "data-sslprefix" => "apache",
        "data-sslcert" => "",
        "data-sslkey" => ""

      #apache_container
        = boolean_field %w(apache generate_certs)
        = boolean_field %w(apache insecure)
        = string_field %w(apache ssl_crt_file)
        = string_field %w(apache ssl_key_file)
        = string_field %w(apache ssl_crt_chain_file)
